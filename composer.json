{
    "name": "evansmwenda/weight-conversions",
    "description": "This is my package weight-conversions written in PHP",
    "keywords": [
        "evansmwenda",
        "weight-conversions"
    ],
    "homepage": "https://github.com/evansmwenda/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Evans Mwenda",
            "email": "evansmwenda.em@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Evansmwenda\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Evansmwenda\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
